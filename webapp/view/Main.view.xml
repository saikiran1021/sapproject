<mvc:View
    controllerName="com.project.project1.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page
        id="mainPage"
        title="Expense Claim - User Details">

        <VBox
            id="mainVBox"
            class="sapUiSmallMargin">

            <Input
                id="nameInput"
                placeholder="Enter Name"
                value="{/name}" />

            <Select
                id="claimTypeSelect"
                selectedKey="{/claimType}">

                <items>
                    <core:Item
                        id="mobileItem"
                        key="Mobile"
                        text="Mobile Claims" />
                    <core:Item
                        id="broadbandItem"
                        key="Broadband"
                        text="Broadband Claims" />
                </items>

            </Select>

            <Button
                id="proceedButton"
                text="Proceed"
                type="Emphasized"
                press="onNext"
                class="sapUiSmallMarginTop" />

        </VBox>

    </Page>

</mvc:View>
